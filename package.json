{
  "name": "vue-base-enterprise",
  "private": true,
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "commitlint": "commitlint --edit",
    "dev": "vite --mode dev",
    "dev:qa": "vite --mode qa",
    "dev:prod": "vite --mode prod",
    "build:qa": "cross-env NODE_ENV=staging npx eslint ./src && vue-tsc && vite build --mode qa",
    "build:prod": "cross-env NODE_ENV=production npx eslint ./src && vue-tsc && vite build --mode prod",
    "lint": "cross-env NODE_ENV=local npx eslint ./src",
    "lint:prod": "cross-env NODE_ENV=production npx eslint ./src",
    "preview": "vite preview",
    "prepare": "husky",
    "postinstall": "husky"
  },
  "dependencies": {
    "@capacitor/android": "^8.0.2",
    "@capacitor/cli": "^8.0.2",
    "@capacitor/core": "^8.0.2",
    "@capacitor/geolocation": "^8.0.0",
    "@capacitor/ios": "^8.0.2",
    "@quasar/extras": "^1.17.0",
    "@types/isotope-layout": "^3.0.15",
    "@unhead/vue": "^2.1.2",
    "@vueuse/core": "^14.2.0",
    "isotope-layout": "^3.0.6",
    "pinia": "^3.0.4",
    "pinia-plugin-persistedstate": "^4.7.1",
    "quasar": "^2.18.6",
    "vue": "^3.5.27",
    "vue-i18n": "^11.2.8",
    "vue-router": "^5.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@eslint/js": "^9.39.2",
    "@quasar/vite-plugin": "^1.10.0",
    "@types/node": "^25.2.0",
    "@vitejs/plugin-vue": "^6.0.4",
    "@vue/tsconfig": "^0.8.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "eslint-plugin-vue": "^10.7.0",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "prettier": "^3.8.1",
    "sass": "^1.97.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "vue-tsc": "^3.2.4"
  }
}
